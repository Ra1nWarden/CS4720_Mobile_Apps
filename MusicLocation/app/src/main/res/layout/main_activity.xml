<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Music Player"
        android:id="@+id/name"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/popularLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/returned"
        android:layout_centerHorizontal="true"
        android:text="See Local Hits"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/onlineMusicPlayerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popularLink"
        android:layout_centerHorizontal="true"
        android:text="Launch Online Player"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/returnInput"/>

    <!--<Button-->
        <!--android:id="@+id/staticMusicPlayerLink"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/onlineMusicPlayerLink"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Launch Static Player"/>-->


</LinearLayout>
